                    <img class="img-responsive" src="{{ asset('img/vrac.jpg') }}" alt="t-shirts en vrac" style="width:100%">
                    <div class="container">
                    </div>
                </div>
            </div>

            <div class="col-lg-offset-1 col-lg-4 col-md-offset-1 col-md-4 col-sm-offset-1 col-sm-4 col-xs-offset-1 col-xs-4">
                <div class="polaroid-3">
                    <img class="img-responsive" src="{{ asset('img/tshirt1-resize.jpg') }}" alt="personne portant un t-shirt dissidance" style="width:100%">
                    <div class="container">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row_gallery_2">
            <div class="col-lg-5 col-lg-offset-1 col-md-5 col-md-offset-1">
                <div class="polaroid_1 rotate_right">
