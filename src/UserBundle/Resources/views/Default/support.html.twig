                        <img class="img-responsive" src="{{ asset('img/platine2.jpg') }}" alt="un ordinateur et une platine" style="width:100%">
                        <div class="container">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--GALLERY VINYLES-->

    <div class="container-fluid">
        <div class="row_gallery">
            <div class="col-lg-5 col-lg-offset-1 col-md-4 col-offset-1 col-sm-4 col-sm-offset-1 col-xs-4 col-xs-offset-1">
                <div class="polaroid-2">
                    <img class="img-responsive" src="{{ asset('img/platine1.jpg') }}" alt="pochette vinyle et platine" style="width:100%">
