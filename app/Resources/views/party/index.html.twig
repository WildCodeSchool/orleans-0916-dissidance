{% extends 'base.html.twig' %}

{% block body %}
    <h1>Party list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Artist</th>
                <th>Place</th>
                <th>Content</th>
                <th>Soundcloud</th>
                <th>Keyword</th>
                <th>Imgslide</th>
                <th>Imgcover</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for party in party %}
            <tr>
                <td><a href="{{ path('party_show', { 'id': party.id }) }}">{{ party.id }}</a></td>
                <td>{{ party.title }}</td>
                <td>{{ party.artist }}</td>
                <td>{{ party.place }}</td>
                <td>{{ party.content }}</td>
                <td>{{ party.soundcloud }}</td>
                <td>{{ party.keyword }}</td>
                <td>{{ party.imgSlide }}</td>
                <td>{{ party.imgCover }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('party_show', { 'id': party.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('party_edit', { 'id': party.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('party_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
